<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/fond1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Convertisseur Temperature "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:alpha ="0.7"/>

    <EditText
        android:id="@+id/enterTemp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Entrez la temperature "
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#151414"
        android:textSize="25dp" />

    <Button
        android:id="@+id/cToF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#042B4A"
        android:text="de Celsius a Farenheit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25dp"
        app:cornerRadius="20dp"
        android:alpha ="0.7"/>

    <Button
        android:id="@+id/fToc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#042B4A"
        android:text="de Farenheit a Celsius"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25dp"
        app:cornerRadius="20dp"
        android:alpha ="0.7"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="0 Degres "
        android:textAlignment="center"
        android:textColor="#0C0303"
        android:textSize="65dp"
        android:alpha ="0.7"/>
</LinearLayout>